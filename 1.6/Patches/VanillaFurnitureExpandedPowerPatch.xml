<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Furniture Expanded - Power</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName = "VPE_NuclearGenerator"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "VPE_NuclearGenerator"]</xpath>
						<value>
							<comps>
								<li Class="VEF.Buildings.CompProperties_RandomBuildingGraphic">
									<randomGraphics>
										<li>Things/Building/Nuclear/NuclearPowerPlant</li>
										<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_CoolingTower</li>
										<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_Double</li>
										<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_LessPipes</li>
									</randomGraphics>
									<optionalNames>
										<li>Standard Nuclear Power Plant</li>
										<li>Cooling Tower</li>
										<li>Double</li>
										<li>Less Pipes</li>
									</optionalNames>
								</li>
							</comps>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "VPE_NuclearGenerator"]/comps</xpath>
						<value>
							<li Class="VEF.Buildings.CompProperties_RandomBuildingGraphic">
								<randomGraphics>
									<li>Things/Building/Nuclear/NuclearPowerPlant</li>
									<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_CoolingTower</li>
									<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_Double</li>
									<li>Things/Building/VFEPower/Nuclear/VFE_NuclearPowerPlant_LessPipes</li>
								</randomGraphics>
								<optionalNames>
									<li>Standard Nuclear Power Plant</li>
									<li>Cooling Tower</li>
									<li>Double</li>
									<li>Less Pipes</li>
								</optionalNames>
							</li>
						</value>
					</match>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>/Defs/ThingDef[defName = "VFE_AdvancedSolarGenerator"]/comps</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "VFE_AdvancedSolarGenerator"]</xpath>
						<value>
							<comps>
								<li Class="VEF.Buildings.CompProperties_RandomBuildingGraphic">
									<randomGraphics>
										<li>Things/Building/Power/AdvancedSolarCollector/AdvancedSolarCollector</li>
										<li>Things/Building/VFEPower/AdvancedSolarCollector/VFE_AdvancedSolar_Hexagonal</li>
										<li>Things/Building/VFEPower/AdvancedSolarCollector/VFE_AdvancedSolar_Round</li>
									</randomGraphics>
									<optionalNames>
										<li>Standard Advanced Solar Generator</li>
										<li>Hexagonal</li>
										<li>Round</li>
									</optionalNames>
								</li>
							</comps>
						</value>
					</nomatch>
					<match Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName = "VFE_AdvancedSolarGenerator"]/comps</xpath>
						<value>
							<li Class="VEF.Buildings.CompProperties_RandomBuildingGraphic">
								<randomGraphics>
									<li>Things/Building/Power/AdvancedSolarCollector/AdvancedSolarCollector</li>
									<li>Things/Building/VFEPower/AdvancedSolarCollector/VFE_AdvancedSolar_Hexagonal</li>
									<li>Things/Building/VFEPower/AdvancedSolarCollector/VFE_AdvancedSolar_Round</li>
								</randomGraphics>
								<optionalNames>
									<li>Standard Advanced Solar Generator</li>
									<li>Hexagonal</li>
									<li>Round</li>
								</optionalNames>
							</li>
						</value>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>

